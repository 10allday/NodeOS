#! /usr/bin/env sh

#
# Install Ubuntu dependencies
# The dependencies of one level would also be needed for the next ones
#

# Update cache
apt-get update -qq


# cross-compiler
apt-get install -qq -y gcc texinfo

# barebones
apt-get install -qq -y bc qemu-system

# initramfs
apt-get install -qq -y nodejs-legacy

# rootfs
apt-get install -qq -y genisoimage

# usersfs
apt-get install -qq -y autoconf automake
